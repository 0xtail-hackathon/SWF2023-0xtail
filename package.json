{
  "name": "root-backend",
  "version": "0.0.1",
  "description": "Nest Template",
  "private": true,
  "license": "MIT",
  "engines": {
    "npm": ">=8.0.0",
    "node": ">=18.0.0"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"**/*.ts\" --fix",
    "migrate:generate": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:generate ./migrations/GenerateDatabase -d ./ormconfig.ts ",
    "migrate:run": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:run -d ./ormconfig.ts",
    "migrate:revert": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:revert -d ./ormconfig.ts",
    "commitlint": "commitlint -e",
    "lint-staged": "lint-staged",
    "simple-git-hooks": "simple-git-hooks",
    "postinstall": "npm run simple-git-hooks"
  },
  "dependencies": {
    "@nestjs/axios": "0.1.0",
    "@nestjs/common": "9.0.0",
    "@nestjs/config": "2.2.0",
    "@nestjs/core": "9.0.0",
    "@nestjs/platform-express": "9.0.0",
    "@nestjs/swagger": "6.1.2",
    "@nestjs/typeorm": "9.0.1",
    "@openzeppelin/contracts": "^4.9.2",
    "@types/connect-redis": "^0.0.20",
    "@types/express-session": "^1.17.7",
    "@types/redis": "^4.0.11",
    "axios": "1.1.2",
    "cache-manager": "5.0.1",
    "class-transformer": "0.5.1",
    "class-transformer-validator": "0.9.1",
    "class-validator": "0.13.2",
    "cls-hooked": "4.2.2",
    "logform": "^2.5.1",
    "morgan": "1.10.0",
    "mysql": "2.18.1",
    "redis": "^4.6.7",
    "reflect-metadata": "0.1.13",
    "rimraf": "3.0.2",
    "rxjs": "7.2.0",
    "uuid": "^9.0.0",
    "winston": "^3.10.0",
    "@nomicfoundation/hardhat-ethers": "^3.0.4",
    "@nomicfoundation/hardhat-toolbox": "^3.0.0",
    "@nomicfoundation/hardhat-verify": "^1.0.4",
    "@types/chai": "^4.3.5",
    "@types/mocha": "^10.0.1",
    "chai": "^4.3.7",
    "ethers": "^6.6.4",
    "hardhat": "^2.17.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.2.0",
    "@commitlint/config-conventional": "^13.2.0",
    "@nestjs/cli": "9.0.0",
    "@nestjs/schematics": "9.0.0",
    "@nestjs/testing": "9.0.0",
    "@types/express": "4.17.13",
    "@types/node": "16.0.0",
    "@types/supertest": "2.0.11",
    "@typescript-eslint/eslint-plugin": "5.0.0",
    "@typescript-eslint/parser": "5.40.0",
    "eslint": "8.25.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-config-semistandard": "17.0.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-import-resolver-typescript": "^3.5.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-simple-import-sort": "8.0.0",
    "eslint-plugin-unicorn": "44.0.2",
    "eslint-plugin-unused-imports": "2.0.0",
    "lint-staged": "^13.0.3",
    "prettier": "2.3.2",
    "semistandard": "16.0.1",
    "simple-git-hooks": "2.8.0",
    "source-map-support": "0.5.20",
    "supertest": "6.1.3",
    "ts-loader": "9.2.3",
    "ts-node": "10.7.0",
    "tsconfig-paths": "4.1.0",
    "typescript": "4.8.4"
  },
  "simple-git-hooks": {
    "pre-commit": "npm run lint-staged",
    "commit-msg": "npm run commitlint"
  },
  "lint-staged": {
    "{src,test}/*.ts": "eslint --fix"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
